<% layout('layouts/boilerplate')%>
    <div class="row">
        <h2 class="text-center">Edit Post</h2>
        <div class="col-md-4 offset-md-3 col-xl-4 offset-xl-4">
            <form action="/posts/<%=post.id%>?_method=PUT" method="post" novalidate class="validated-form mt-2"
                enctype="multipart/form-data">
                <div class="mb-3 form-floating">
                    <input class="form-control" type="text" id="title" name="title" placeholder="Title:"
                        value="<%=post.title%>" required>
                    <label class="form-label" for="title">Title:</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="content">Content:</label>
                    <textarea class="form-control" name="content" id="content" required><%=post.content%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image:</label>
                    <input class="form-control" type="file" id="image" name="image">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Update Post</button>
                </div>
            </form>
            <a class="btn btn-secondary" role="button" href="/posts/">Back To All Posts</a>
            </form>
        </div>
    </div>