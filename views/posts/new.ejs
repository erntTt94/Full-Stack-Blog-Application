<% layout('layouts/boilerplate')%>
    <div class="row">
        <h2 class="text-center">New Post</h2>
        <div class="col-md-4 offset-md-3 col-xl-4 offset-xl-4">
            <form action="/posts" method="post" enctype='multipart/form-data' novalidate class="validated-form mt-2">
                <div class="mb-3 form-floating">
                    <input class="form-control" type="text" id="title" name="title" placeholder="title" required>
                    <label class="form-label" for="title">Title:</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="content">Content:</label>
                    <textarea class="form-control" id="content" name="content" cols="12" rows="10" required></textarea>

                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image:</label>
                    <input class="form-control" type="file" name="image" id="image">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Post</button>
                </div>
            </form>
            <a class="btn btn-secondary mb-3" role="button" href="/posts">All Posts</a>
        </div>
    </div>